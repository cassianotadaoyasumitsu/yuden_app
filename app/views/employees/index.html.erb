<div class="row justify-content-center">
  <%= image_tag "logo.png", alt: "alttext", class: 'p-5' %>
</div>

<h1 class="mb-5 text-center">Funcionários</h1>

<%= link_to 'Criar Novo Funcionário', new_employee_path, class: 'btn btn-outline-primary w-100 mb-4' %>

<ul class="list-group mb-3">
  <% @employees.each do |employee| %>
  <li class="list-group-item"><%= employee.name %> -
    <%= link_to 'Visualizar', employee_path(employee), class: 'btn btn-outline-primary rounded-pill' %> -
    <%= link_to 'Editar', edit_employee_path(employee), class: 'btn btn-outline-info rounded-pill' %> -
    <%= link_to 'Deletar', employee_path(employee), class: 'btn btn-outline-danger rounded-pill', method: :delete, data: { confirm: 'Tem certeza?'} %>
  </li>
  <% end %>
</ul>


<%= link_to 'Home', root_path, class: 'btn btn-outline-info' %>
