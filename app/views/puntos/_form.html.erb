<%= simple_form_for [punto] do |f| %>
<%= f.input :day %>
<%= f.input :night %>
<%= f.input :day_off %>
<%= f.input :date %>
<%# raise %>
<% if punto.in %>
<%= f.input :out, as: :hidden, html5: true, input_html: { value: Time.now.strftime("%k:%M") } %>
<% else %>
<%= f.input :in, as: :hidden, html5: true, input_html: { value: Time.now.strftime("%k:%M") } %>
<% end %>
<%= f.input :note %>
<%= f.input :weekend %>
<%= f.input :night_shift %>
<% if punto.in %>
<%= f.submit "Check Out" %>
<% else %>
<%= f.submit "Check In" %>
<% end %>

<% end %>
